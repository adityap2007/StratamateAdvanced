{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)\\.php$",
      "dest": "/api/$1.php",
      "headers": {
        "Content-Type": "text/html; charset=UTF-8"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "includeFiles": [
    "package.json",
    "package-lock.json",
    "next.config.js",
    "tsconfig.json",
    "tailwind.config.js",
    "postcss.config.js",
    "app/**",
    "public/**"
  ]
}
